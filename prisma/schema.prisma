generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  email        String       @unique
  name         String
  password     String
  phoneNumber  String
  address      String?
  avatar       String?
  birthDate    String
  favoritesIds String[]     @db.ObjectId
  favorites    Restaurant[] @relation("FavoriteRestaurants", fields: [favoritesIds], references: [id])
  createdAt    DateTime     @default(now())
  reviews      Reviews[]    @relation("UserReviews")
  points       Int          @default(1000)
  role         Role         @default(User)
  gender       Gender       @default(Male)
}

model Reviews {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  user         User        @relation("UserReviews",fields: [userId], references: [id])
  userId       String      @db.ObjectId
  restaurant   Restaurant  @relation("RestaurantReviews",fields: [restaurantId], references: [id])
  restaurantId String      @db.ObjectId
  rating       Float
  comment      String
  createdAt    DateTime    @default(now())
}

model Restaurant{
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  location     String
  rating       Float
  reviews      Reviews[]   @relation("RestaurantReviews")
  workingHours String
  phoneNumber  String
  avatar       String
  description  String
  createdAt    DateTime     @default(now())
  Menu         Menu?        @relation("RestaurantMenu")
  favoritedBy  User[]      @relation("FavoriteRestaurants", fields: [userIds], references: [id])
  userIds      String[]      @db.ObjectId
}

model Menu{
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  restaurant    Restaurant @relation("RestaurantMenu",fields: [restaurantId], references: [id])
  restaurantId  String     @unique @db.ObjectId
  Image         String
  Title         String
  Description   String
}

enum Role {
  User
  Admin
}

enum Gender{
  Male
  Female
}